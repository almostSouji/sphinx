{
	"name": "sphinx",
	"version": "0.0.0",
	"description": "",
	"contributors": [
		"Souji <timoqueezle@gmail.com>"
	],
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "rimraf dist && tsc --skipLibCheck",
		"start": "sh -c \"node dist/index.js | pino-pretty -c -l -t\"",
		"deploy": "node --unhandled-rejections=strict dist/index.js",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"prettier": "prettier --write **/*.{ts,js,json,yml,yaml}"
	},
	"dependencies": {
		"@naval-base/ms": "^3.1.0",
		"common-tags": "^1.8.0",
		"discord.js": "github:discordjs/discord.js#5ddc7c23caaf0413287b489af286316a6bb261a5",
		"dotenv": "^10.0.0",
		"pino": "^6.11.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.2",
		"@commitlint/config-angular": "^9.1.2",
		"@types/common-tags": "^1.8.0",
		"@types/dotenv": "^8.2.0",
		"@types/node": "^15.12.2",
		"@types/pino": "^6.3.8",
		"@typescript-eslint/eslint-plugin": "^3.10.1",
		"@typescript-eslint/parser": "^3.10.1",
		"eslint": "^7.7.0",
		"eslint-config-marine": "^7.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.13",
		"pino-pretty": "^5.0.0",
		"prettier": "^2.1.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.2"
	},
	"engines": {
		"node": ">=15.0.0"
	},
	"eslintConfig": {
		"extends": "marine/prettier/node",
		"parserOptions": {
			"project": "./tsconfig.eslint.json"
		},
		"rules": {
			"@typescript-eslint/naming-convention": 0,
			"no-console": 1
		}
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"trailingComma": "all",
		"endOfLine": "lf"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.js": [
			"prettier --write"
		],
		"*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,yml,yaml}": [
			"prettier --write"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"types",
					"wip"
				]
			]
		}
	}
}
